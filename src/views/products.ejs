<h2 class="mt-3 text-center">Inventory App Using MVC Pattern</h2>
<table class="table table-hover table-secondary table-striped">
	<thead>
		<tr>
			<th scope="col">Pid</th>
			<th scope="col">Name</th>
			<th scope="col">Description</th>
			<th scope="col">Price</th>
			<th scope="col">Image</th>
			<th scope="col" class="text-center">Actions</th>
		</tr>
	</thead>

	<tbody>
		<% products.forEach((product) => { %>
		<tr class="align-middle">
			<th scope="row"><%= product.id %></th>
			<td><%= product.name %></td>
			<td><%= product.description %></td>
			<td><%= product.price %></td>
			<td>
				<img src="<%= product.imageUrl %>" alt="img" style="width: 60px" />
			</td>
			<td>
				<div class="d-flex justify-content-center gap-3">
					<a href="/update/<%= product.id%>" class="btn btn-warning">Edit</a>
					<!-- <a href="/delete/<%=product.id%>" class="btn btn-danger">Delete</a> -->
					<button
						class="btn btn-danger"
						onclick="deleteProduct('<%=product.id %>')">
						Delete
					</button>
				</div>
			</td>
		</tr>
		<% }) %>
	</tbody>
</table>
